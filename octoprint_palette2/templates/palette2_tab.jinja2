<div class="row">
	<div class="distance" style="margin-left: 50px">
			<div class="row">
				<h4>Palette 2</h4>
				<p>Connection Status: <span id="connection-state-msg" class="text-muted" data-bind="text: connectionStateMsg">Not Connected</span></p>
				<div style="margin-top: 20px">
					<div class="serial-ports">
						<h6 data-bind="click: displayPorts">Select Serial Port</h6>
						<select class="serial-ports-list" data-bind="options: ports, value: selectedPort"></select>
					</div>
					<div class="p2-connect-buttons">
						<button class="btn btn-primary connect-palette-button" data-bind="click: connectOmega">Connect</button>
						<button type="button" class="btn btn-primary" data-bind="click: disconnectPalette2, enable: connected">Disconnect</button>
					</div>
				</div>
			</div>
			<hr>
			<div class="row palette-status">
				<h4 class="palette-status-title">Status</h4>
				<h5 class="current-status">No ongoing Palette 2 print</h5>
				<ul class="status-container">
					<li class="single-status splice-amount">
						<h5 class="single-status-title">Current Splice: </h5>
						<span class="single-status-value current-splice"></span>
						<span class="single-status-value total-splices">-</span>
					</li>
					<li class="single-status filament-used">
						<h5 class="single-status-title">Filament Used: </h5>
						<span class="single-status-value">-</span>
					</li>
				</ul>
			</div>
			<hr>
			<div class="row" style="margin-bottom: 20px">
				<h4 class="manual-controls">Manual Controls</h4>
				<button type="button" class="btn btn-primary" data-bind="click: sendCutCmd, enable: connected">Cut</button>
				<button type="button" class="btn btn-primary" data-bind="click: sendClearOutCmd, enable: connected">Clear Palette</button>
			</div>
	</div>
</div>
